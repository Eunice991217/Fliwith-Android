<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".src.main.review.ReviewWriteFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/review_detail_back_icon"
            android:layout_width="14dp"
            android:layout_height="23dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/arrow" />

        <View
            android:id="@+id/review_detail_grey_view"
            android:background="@color/grey"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />



        <LinearLayout
            android:padding="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:font="@font/pretendard_medium"
                android:fontWeight="600"
                android:text="어디에 다녀오셨나요?"
                android:layout_marginBottom="15dp"
                android:textSize="20dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_marginBottom="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/review_write_map_icon"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/map_pin_icon" />

                <EditText
                    android:id="@+id/review_write_et"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:backgroundTint="@color/purple"
                    android:inputType="text"
                    android:textColor="@color/purple"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:fontWeight="600"
                    android:enabled="false"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:font="@font/pretendard_medium"
                android:fontWeight="600"
                android:text="사진을 첨부해주세요. "
                android:layout_marginBottom="10dp"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:font="@font/pretendard_medium"
                android:fontWeight="600"
                android:text="다녀온 장소, 본인의 사진 등을 한 장 이상 첨부해주세요."
                android:layout_marginBottom="15dp"
                android:textSize="14dp"
                android:textStyle="normal"
                android:textColor="@color/grey"/>


            <LinearLayout
                android:layout_marginBottom="25dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/review_write_image_frame"
                    android:layout_width="120dp"
                    android:layout_height="93dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/review_write_image_frame" />

                <ImageView
                    android:id="@+id/review_write_image_frame_small"
                    android:layout_width="62dp"
                    android:layout_height="93dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/review_write_image_frame_small" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:font="@font/pretendard_medium"
                android:fontWeight="600"
                android:text="후기를 자유롭게 남겨주세요."
                android:layout_marginBottom="10dp"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:font="@font/pretendard_medium"
                android:fontWeight="400"
                android:text="57자 / 최소 20자"
                android:layout_marginBottom="10dp"
                android:textSize="12dp"
                android:textStyle="normal"
                android:textColor="@color/grey"/>

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="156dp"
                android:id="@+id/review_write_comment"
                style="@style/textInputEditText"
                android:layout_marginBottom="20dp"
                android:hint="" />

        </LinearLayout>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/review_write_btn_disabled"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="18sp"
        android:layout_margin="20dp"
        android:background="@drawable/btn_solid_violet"
        android:backgroundTint="@color/btnDisabled"
        android:text="작성하기"
        android:textAppearance="@style/btnText"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="16dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/review_write_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="18sp"
        android:layout_margin="20dp"
        android:background="@drawable/btn_solid_violet"
        android:backgroundTint="@color/lavender"
        android:text="작성하기"
        android:visibility="gone"
        android:textAppearance="@style/btnText"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>