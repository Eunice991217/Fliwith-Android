<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/image_radius"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- review image -->
        <ImageView
            android:id="@+id/review_default_image"
            android:scaleType="centerCrop"
            android:layout_width="135dp"
            android:layout_height="118dp"
            android:src="@drawable/review_default_image" />

        <LinearLayout
            android:padding="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <!-- profile image -->
                <ImageView
                    android:id="@+id/review_profile_image"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:src="@drawable/profile_image" />

                <!-- user name -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:font="@font/pretendard_medium"
                    android:fontWeight="500"
                    android:text="우유"
                    android:textSize="12dp"
                    android:textStyle="normal" />

            </LinearLayout>

            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="0dp"/>

            <LinearLayout
                android:id="@+id/right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <!-- heart image -->
                <ImageView
                    android:id="@+id/heart_image"
                    android:layout_width="14dp"
                    android:layout_height="11dp"
                    android:src="@drawable/heart_icon" />

                <!-- heart count -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:font="@font/pretendard_medium"
                    android:fontWeight="500"
                    android:text="11"
                    android:textColor="@color/heartSolid"
                    android:textSize="12dp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>